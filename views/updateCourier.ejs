<!DOCTYPE html>
<html>
  <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Instascan</title>
        <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
        <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
        <script type="text/javascript" src="/static/instascan.min.js" ></script>
  </head>

  <style>
        body {
            background: #0288D1;
        }

        #preview {
            width: 100%;
            height: 500px;
        }

        #track-container {
            background: #fff;
            text-align: center;
            border-radius: 50px;
            margin-top: 25px;
        }

        video {
            margin-top: 10px;
        }

        @media (max-width: 480px) {
            #track-contianer {
                padding: 0 20px;
            }
        }
  </style>

  <body>

    <header>
        <!-- include navbar -->
        <% include partials/navbar.ejs %>
    </header>

    <div class = "container" id = "track-container">
        <video id="preview"></video>
        <div class="row">
            <form class="col s12">
                <div class="row">
                <div class="input-field col offset-m4 s12 m4">
                    <input id="trackId" name = "trackId" type="text" class="validate">
                    <label for="trackId">Track Id</label>
                </div>
                </div>
            </form>
        </div>
        <h2 id = "msg"></h2>
    </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src="/static/js/axios.min.js"></script>

    <script>
        $(document).ready(function(){
            $('.sidenav').sidenav();
        });
    </script>

    <script>
        axios.defaults.headers.post['Content-Type'] ='application/x-www-form-urlencoded';
        let scanner = new Instascan.Scanner(
            {
                video: document.getElementById('preview'),
                mirror: false
            }
        );
        let flag = 0;
        scanner.addListener('scan', function(content) {
            document.getElementById("trackId").value = content;
            if(flag === 0){
                axios.post("/profile/update", { trackId: content })
                .then((res) => {
                    document.getElementById("msg").textContent = res.data;
                    console.log(res);
                });
            }
            flag = 1;
        });
        Instascan.Camera.getCameras().then(cameras => 
        {
            if(cameras.length > 0){
                scanner.start(cameras[0]);
            } else {
                console.error("Please enable Camera!");
            }
        });
    </script>

 </body>
</html>
</html>