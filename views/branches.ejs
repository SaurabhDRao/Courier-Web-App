<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Branches</title>
    <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
    <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/users-styles.css">


</head>
<body>
    
        <header>
            <!-- include navbar -->
            <% include partials/navbar.ejs %>
        </header>

        <div class="container users-container z-depth-4">
            <h1>BRANCHES</h1>
            <div class="row">
                <div class="col s12 l12 m12">
                    <table class="striped centered responsive-table">
                        <thead>
                            <tr>
                                <th>Branch ID</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Landmark</th>
                                <th>Contact</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <% branches.forEach(function(branch){ %>
                            <tr>
                                <td><%= branch.branchid %></td>
                                <td><%= branch.address %></td>
                                <td><%= branch.city %></td>
                                <td><%= branch.landmark %></td>
                                <td><%= branch.contact %></td>
                                <td>
                                    <a class = "tooltipped" id = "editBtn" href="/profile/editBranchDetails/<%= branch.branchid %>" data-position="bottom" data-tooltip="Edit"><i class = "fa fa-edit"></i></a>
                                    <a class = "tooltipped" id = "deleteBtn" href="/profile/deleteBranch/<%= branch.branchid %>" data-position="bottom" data-tooltip="Delete"><i class = "fa fa-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
            <hr />
            <button id = "toggleForm">Show form</button>
            <div class = "row" id = "addNew">
                <h4>Add New Branch</h4>
                <form action="/profile/addNewBranch" method = "POST"  class="col s12">
                    <div class="row">
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="address" name = "address" value = "" type="text" class="validate" required>
                            <label for="address">Address</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="city" name = "city" value = "" type="text" class="validate" required>
                            <label for="city">City</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="contact" name = "contact" value = "" type="tel" class="validate" required>
                            <label for="contact">Contact</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="landmark" name = "landmark" value = "" type="text" class="validate" required>
                            <label for="landmark">Landmark</label>
                        </div>
                    </div>
                    <button class = "btn waves-effect waves-light indigo">Add</button>
                </form>
            </div>
        </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src = "/static/js/main.js" ></script>

    <script>
        $(document).ready(function(){
            $('select').formSelect();
            $(".sidenav").sidenav();
            $('.tooltipped').tooltip();
        });
    </script>

</body>
</html>