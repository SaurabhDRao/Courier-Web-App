<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>MESSAGE</title>
    <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
    <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/support.css">


</head>
<body>
    
        <header>
            <!-- include navbar -->
            <% include partials/navbar.ejs %>  
        </header>

        <div class="container users-container z-depth-4">
           
            <h1>MESSAGES</h1>
            <div class="row">
                <div class="col s12 l12 m12">
                    <table class="striped centered responsive-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>MESSAGE</th>
                            </tr>
                        </thead>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <td><%= user.name %></td>
                               
                                <td><%= user.email %></td>
                                <td><%= user.mobile %></td>
                                <td><%= user.msg %></td>
                                <td>
                                    <a class = "tooltipped" id = "deleteBtn" href="/contact/deleteMsg/<%= user.id %>" data-position="bottom" data-tooltip="Delete"><i class = "fa fa-trash" style = "color: red;"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
     
           </div>
    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>

    <script>
        $(document).ready(function(){
            $(".sidenav").sidenav();
            $('.tooltipped').tooltip();
        });
    </script>

</body>
</html>