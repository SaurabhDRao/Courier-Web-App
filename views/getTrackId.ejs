<!DOCTYPE html>
<html>
  <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Instascan</title>
        <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
        <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
        <script type="text/javascript" src="/static/instascan.min.js" ></script>
  </head>

  <style>
        body {
            background: #0288D1;
        }

        #preview {
            width: 100%;
            height: 500px;
        }

        #track-container {
            background: #fff;
            text-align: center;
            border-radius: 50px;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        video {
            margin-bottom: 20px;
        }
        
        .btn:hover {
            opacity: 0.8;
        }

        @media (max-width: 480px) {
            #track-contianer {
                padding: 0 20px;
            }
        }
  </style>

  <body>

    <header>
        <!-- include navbar -->
        <% include partials/navbar.ejs %>
    </header>

    <div class = "container" id = "track-container">
        <div class="row">
            <form method = "POST" action = "/track/sendTrackId" id = "trackForm" class="col s12" style = "margin-top: 20px;">
                <div class="row">
                    <div class="input-field col offset-m3 s8 m4">
                        <input id="trackId" name = "trackId" type="text" class="validate" required = "">
                        <label for="trackId">Package ID</label>
                    </div>
                    <div class="input-field col s4 m4" style = "text-align: left">
                        <button class="btn waves-effect blue waves-light" type="submit" name="action">Track
                            <i class="fas fa-search-location"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <h4 id = "msg"></h4>
        <video id="preview"></video>
    </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src="/static/js/axios.min.js"></script>

    <script>
        $(document).ready(function(){
            $('.sidenav').sidenav();
        });
    </script>

    <script>
        let trackId = "";
        axios.defaults.headers.post['Content-Type'] ='application/x-www-form-urlencoded';
        let scanner = new Instascan.Scanner(
            {
                video: document.getElementById('preview'),
                mirror: false
            }
        );
        let tid = "";
        scanner.addListener('scan', function(content) {
            document.getElementById("trackId").value = content;
            tid = content;
        });
        Instascan.Camera.getCameras().then(cameras => 
        {
            if(cameras.length > 0){
                scanner.start(cameras[0]);
            } else {
                console.error("Please enable Camera!");
            }
        });  
    </script>

 </body>
</html>
</html>