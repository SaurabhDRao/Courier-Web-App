<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile</title>
    <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
    <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/users-styles.css">
</head>
<body>

    <header>
        <!-- include navbar -->
        <% include partials/navbar.ejs %>
        
    </header>

    <div class="container profile-container z-depth-4">
        <h1>My Profile</h1>
        <form action="/profile/updateUser/<%= user.id %>" method = "POST"  class="col s12">
            <div class="row">
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="username" name = "username" value = "<%= user.username %>" type="text" class="validate">
                    <label for="username">Username</label>
                </div>
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="name" name = "name" value = "<%= user.name %>" type="text" class="validate">
                    <label for="name">Full Name</label>
                </div>
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="post" name = "post" value = "<%= user.post %>" type="text" class="validate">
                    <label for="post">Designation</label>
                </div>
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="email" name = "email" value = "<%= user.email %>" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="mobile" name = "mobile" value = "<%= user.mobile %>" type="text" class="validate">
                    <label for="mobile">Mobile</label>
                </div>
                <div class="input-field col offset-l2 offset-m2 s12 m8 l8">
                    <input id="address" name = "address" value = "<%= user.address %>" type="text" class="validate">
                    <label for="address">Address</label>
                </div>
            </div>
            <!-- <button class = "btn waves-effect waves-light lighten-1" id = "saveBtn">Save</button>
            <a href="/profile/" class = "btn waves-effect waves-light red lighten-1">Back</a> -->
        </form>
        <hr>
        <button id = "toggleForm">Show form</button>
            <div class = "row" id = "addNew">
                <h4>Change password</h4>
                <form class="col s12" id = "changePasswordForm">
                    <div class="row">
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="password" name = "password" value = "" type="password" class="validate" required>
                            <label for="password">Password</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="confirmPassword" name = "confirmPassword" value = "" type="password" class="validate" required>
                            <label for="confirmPassword">Confirm Password</label>
                        </div>
                    </div>
                    <button class = "btn waves-effect waves-light indigo">Submit</button>
                </form>
            </div>
        </div>

    </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src="/static/js/axios.min.js"></script>
    <script src = "/static/js/main.js" ></script>

    <script >
        const encodeForm = (data) => {
            return Object.keys(data)
                .map(key => encodeURIComponent(key) + '=' + encodeURIComponent(data[key]))
                .join('&');
        }
        $(document).ready(function(){
            $('.sidenav').sidenav();
            $("#changePasswordForm").on("submit", (e) => {
                e.preventDefault();
                let password = $("#password").val();
                let confirmPassword = $("#confirmPassword").val();
                if(password !== confirmPassword) {
                    M.toast({html: "Passwords doesn't match!"});
                } else {
                    let passwordData = {
                        password: password
                    }
                    console.log(passwordData);
                    axios.post("/profile/changePassword", encodeForm(passwordData), {headers: {'Accept': 'application/json'}})
                        .then((res) => {
                            M.toast({html: res.data});
                            $("#password").val("");
                            $("#confirmPassword").val("");
                        });
                }
            });
        });
            
    
    </script>

</body>
</html>