<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Users</title>
    <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
    <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/users-styles.css">


</head>
<body>
    
        <header>
            <!-- include navbar -->
            <% include partials/navbar.ejs %>
        </header>

    <div class="users-container">
        <h1>EMPLOYEES</h1>
        <div class = "details">
            <table>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>City</th>
                    <th>Options</th>
                </tr>
                <% users.forEach(function(user){ %>
                    <tr>
                        <td><%= user.fname %></td>
                        <td><%= user.lname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.city %></td>
                        <td>
                            <a id = "editBtn" href="/profile/editUserDetails/<%= user.id %>"><i class = "fa fa-edit"></i></a>
                            <a id = "deleteBtn" href="/profile/deleteUser/<%= user.id %>"><i class = "fa fa-trash"></i></a>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
        <hr />
        <button id = "toggleForm">Display add new employee form</button>
        <div id = "addNew">
            <h2>Add New Employee</h2>
            <form action="/profile/addNewUser" method = "POST"  class="col s6">
                <div class="row">
                    <div class="input-field col offset-s2 s8">
                        <input id="first_name" name = "fname" vallue = "" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                    <div class="input-field col offset-s2 s8">
                        <input id="last_name" name = "lname" vallue = "" type="text" class="validate">
                        <label for="last_name">Last Name</label>
                    </div>
                    <div class="input-field col offset-s2 s8">
                        <input id="email" name = "email" vallue = "" type="text" class="validate">
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field col offset-s2 s8">
                        <input id="city" name = "city" vallue = "" type="text" class="validate">
                        <label for="city">City</label>
                    </div>
                </div>
                <button>Add</button>
            </form>
        </div>
    </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src = "/static/js/main.js" ></script>

    <script>
        $(".sidenav").sidenav();
    </script>

</body>
</html>