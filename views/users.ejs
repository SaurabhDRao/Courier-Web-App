<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Users</title>
    <link rel="stylesheet" href="/static/materialize/css/materialize.min.css">
    <link href="/static/fontawesome-free-5.9.0-web/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/users-styles.css">


</head>
<body>
    
        <header>
            <!-- include navbar -->
            <% include partials/navbar.ejs %>
        </header>

        <div class="container users-container z-depth-4">
            <h1>EMPLOYEES</h1>
            <div class="row">
                <div class="col s12 l12 m12">
                    <table class="striped centered responsive-table">
                        <thead>
                            <tr>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Email</th>
                                <th>City</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <td><%= user.fname %></td>
                                <td><%= user.lname %></td>
                                <td><%= user.email %></td>
                                <td><%= user.city %></td>
                                <td>
                                    <a class = "tooltipped" id = "editBtn" href="/profile/editUserDetails/<%= user.id %>" data-position="bottom" data-tooltip="Edit"><i class = "fa fa-edit"></i></a>
                                    <a class = "tooltipped" id = "deleteBtn" href="/profile/deleteUser/<%= user.id %>" data-position="bottom" data-tooltip="Delete"><i class = "fa fa-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
            <hr />
            <button id = "toggleForm">Show form</button>
            <div class = "row" id = "addNew">
                <h4>Add New Employee</h4>
                <form action="/profile/addNewUser" method = "POST"  class="col s12">
                    <div class="row">
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="first_name" name = "fname" vallue = "" type="text" class="validate">
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="last_name" name = "lname" vallue = "" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="email" name = "email" vallue = "" type="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field col offset-l3 offset-m3 s12 m6 l6">
                            <input id="city" name = "city" vallue = "" type="text" class="validate">
                            <label for="city">City</label>
                        </div>
                    </div>
                    <button>Add</button>
                </form>
            </div>
        </div>

    <script src="/static/jquery.js"></script>
    <script src="/static/materialize/js/materialize.min.js"></script>
    <script src = "/static/js/main.js" ></script>

    <script>
        $(document).ready(function(){
            $(".sidenav").sidenav();
            $('.tooltipped').tooltip();
        });
    </script>

</body>
</html>