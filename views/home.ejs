    <script src="/static/js/axios.min.js"></script>

    <script>
        const encodeForm = (data) => {
            return Object.keys(data)
                .map(key => encodeURIComponent(key) + '=' + encodeURIComponent(data[key]))
                .join('&');
        }
        $(document).ready(function(){
            $('.sidenav').sidenav();
            $("#contactForm").on("submit", (e) => {
                e.preventDefault();
                let contactDetails = {
                    name: $("#name").val(),
                    email: $("#email").val(),
                    mobile: $("#mobile").val(),
                    msg: $("#textarea").val()
                }
                console.log(contactDetails);
                axios.post("/contact", encodeForm(contactDetails), {headers: {'Accept': 'application/json'}})
                    .then((res) => {
                        M.toast({html: res.data});
                        $("#name").val("");
                        $("#email").val("");
                        $("#mobile").val("");
                        $("#textarea").val("");
                    });
            });
        });
    </script>

