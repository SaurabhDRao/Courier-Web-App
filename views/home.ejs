                        <div class="card-action">
                            <a href="/auth/login" class = "blue-text">Employee Login</a>
                        </div>
                    </div>
            </div>
            <div class="col s12 m4">
                <div class="card z-depth-4">
                    <div class="card-image">
                        <img src="/static/img/track.png" alt="" class="responsive">
                    </div>
                    <div class = "card-content">
